<% if current_user.requested_friendships.include?(@user) %>
	<% @request_id = Friendship.find_by user_id: @user.id, friend_id: current_user %>
	<%= link_to "Accept",  friendship_path(id: @request_id), method: "put" %>
	<%= link_to "Decline", friendship_path(id: @request_id), method: :delete %>
<% else %>
	<% @request_id = Friendship.find_by user_id: current_user, friend_id: @user.id %>
	<%= link_to "Cancel Request", friendship_path(id: @request_id), method: :delete %>
<% end %>