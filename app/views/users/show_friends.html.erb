<% provide(:title, "#{@user.first_name}s Friends") %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= "#{@user.first_name} #{@user.last_name}s Friends (#{@user.friends.count})" %></h3>
    <% if @users.any? %>
      <ul class="users friends">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>