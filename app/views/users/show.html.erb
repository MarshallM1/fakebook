<% provide(:title, "#{@user.first_name} #{@user.last_name} | FakeBook") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.first_name %>
        <%= @user.last_name %>
      </h1>
      <small>
        <% if current_user == @user %>
          <%= link_to('Edit profile', edit_user_registration_path) %>
        <% end %>
      </small>
    </section>
    <section class="friends_form">
    	<small>
        <%= link_to "Friends: #{@user.friends.count}", show_friends_user_path %>
    	</small>
      <%= render 'shared/friends_form' %>
    </section>
    <section class="post_form">
      <%if current_user == @user %>
        <%= render 'shared/post_form' %>
      <% end %>
    </section>
   </aside>
   <section>
	    <% if @user.posts.any? %>
	      <h3>Posts (<%= @user.posts.count %>)</h3>
	      <div class="container-fluid">
	      	<div class="list-group">
	        	<div class="posts">
	        		<%= render @posts %>
	        	</div>
	      		<%= will_paginate @posts %>
	      	</div>
	      </div>
	    <% end %>
	</section>
</div>
